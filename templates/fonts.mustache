    {
        "fontname": "Cabin",
        "fontheadername": "Cabin",
        "fonttitlename": "Cabin"
    }
}}

{{#fontname}}
/* Load Google main font */
@import url('https://fonts.googleapis.com/css?family={{fontname}}');
{{/fontname}}
{{#fontheadername}}
/* Load Google header font */
@import url('https://fonts.googleapis.com/css?family={{fontheadername}}');
{{/fontheadername}}
{{#fonttitlename}}
/* Load Google title font */
@import url('https://fonts.googleapis.com/css?family={{fonttitlename}}');
{{/fonttitlename}}
